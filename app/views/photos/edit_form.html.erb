<h1>Edit a Photo</h1>

<form action= <%= @action %> >
  <div>
    <label for="photo_caption">Caption:</label>
    <input id="photo_caption" type="text" name="the_caption" value="<%= @photo.caption %>">
  </div>
  <div>
    <label for="photo_image_url">Image URL:</label>
    <input id="photo_image_url" type="text" name="the_source" value="<%= @photo.source %>">
  </div>
  <div>
    <button>Create Photo</button>
  </div>
</form>
